@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Modificar Senha";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>
@Html.PartialAsync("_StatusMessage", Model.StatusMessage);

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="OldPassword"></label>
                <input asp-for="OldPassword" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmePassword"></label>
                <input asp-for="ConfirmePassword" class="form-control" />
                <span asp-validation-for="ConfirmePassword" class="text-danger"></span>
            </div>
        </form>
        <button class="btn btn-default">Alterar Senha</button>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}